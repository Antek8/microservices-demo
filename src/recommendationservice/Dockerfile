FROM python:3.10.8-slim@sha256:49749648f4426b31b20fca55ad854caa55ff59dc604f2f76b57d814e0a47c181
# Enable unbuffered logging
RUN apt-get -qq update \
    && apt-get install -y --no-install-recommends \
        wget g++ git \
    && rm -rf /var/lib/apt/lists/*

ENV PYTHONUNBUFFERED=1
# get packages
COPY --from=builder /usr/local/lib/python3.10/ /usr/local/lib/python3.10/
RUN pip install sealights-python-agent
WORKDIR /recommendationservice
COPY . .

# Grab packages from builder
# Add the application
# set listen port
ENV PORT "8080"
EXPOSE 8080
ENTRYPOINT sl-python run python recommendation_server.py --token ${SL_TOKEN} --labid ${SL_LAB_ID}